<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1">

    <display-name>ltw-web</display-name>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <el-ignored>false</el-ignored>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>ProductListServlet</servlet-name>
        <servlet-class>controller.ProductListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductListServlet</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductDetailServlet</servlet-name>
        <servlet-class>controller.ProductDetailServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductDetailServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartAddServlet</servlet-name>
        <servlet-class>controller.CartAddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CartAddServlet</servlet-name>
        <url-pattern>/cart/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartUpdateServlet</servlet-name>
        <servlet-class>controller.CartUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartUpdateServlet</servlet-name>
        <url-pattern>/cart/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CartRemoveServlet</servlet-name>
        <servlet-class>controller.CartRemoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartRemoveServlet</servlet-name>
        <url-pattern>/cart/remove</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CartClearServlet</servlet-name>
        <servlet-class>controller.CartClearServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartClearServlet</servlet-name>
        <url-pattern>/cart/clear</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoriesController</servlet-name>
        <servlet-class>controller.CategoriesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoriesController</servlet-name>
        <url-pattern>/categories</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>AdminProductListServlet</servlet-name>
        <servlet-class>controller.AdminProductListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminProductListServlet</servlet-name>
        <url-pattern>/admin/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoriesController</servlet-name>
        <servlet-class>controller.CategoriesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoriesController</servlet-name>
        <url-pattern>/categories</url-pattern>
    </servlet-mapping>
</web-app>