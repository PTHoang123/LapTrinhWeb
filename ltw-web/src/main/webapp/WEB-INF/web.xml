<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
    version="5.0">

    <display-name>ltw-web</display-name>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <el-ignored>false</el-ignored>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>ProductListServlet</servlet-name>
        <servlet-class>controller.ProductListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductListServlet</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductDetailServlet</servlet-name>
        <servlet-class>controller.ProductDetailServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductDetailServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartAddServlet</servlet-name>
        <servlet-class>controller.CartAddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CartAddServlet</servlet-name>
        <url-pattern>/cart/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartUpdateServlet</servlet-name>
        <servlet-class>controller.CartUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartUpdateServlet</servlet-name>
        <url-pattern>/cart/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CartRemoveServlet</servlet-name>
        <servlet-class>controller.CartRemoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartRemoveServlet</servlet-name>
        <url-pattern>/cart/remove</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CartClearServlet</servlet-name>
        <servlet-class>controller.CartClearServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartClearServlet</servlet-name>
        <url-pattern>/cart/clear</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoriesController</servlet-name>
        <servlet-class>controller.CategoriesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoriesController</servlet-name>
        <url-pattern>/categories</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>AdminProductListServlet</servlet-name>
        <servlet-class>controller.AdminProductListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminProductListServlet</servlet-name>
        <url-pattern>/admin/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>controller.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>SignupServlet</servlet-name>
      <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>SigninServlet</servlet-name>
      <servlet-class>controller.SigninServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>SigninServlet</servlet-name>
      <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>LogoutServlet</servlet-name>
      <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>LogoutServlet</servlet-name>
      <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
      <servlet-name>AdminProductAddServlet</servlet-name>
      <servlet-class>controller.AdminProductAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminProductAddServlet</servlet-name>
        <url-pattern>/admin/products/add</url-pattern>
    </servlet-mapping>
</web-app>